rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* ============================
       ğŸ”¹ HELPER FUNCTIONS
    ============================ */
    function isLoggedIn() {
      return request.auth != null;
    }

    function userDoc() {
      return get(
        /databases/$(database)/documents/users/$(request.auth.uid)
      );
    }

    function isAdmin() {
      return isLoggedIn() &&
        userDoc().data.role == 'admin';
    }

    function isPartner() {
      return isLoggedIn() &&
        userDoc().data.role == 'partner';
    }

    function partnerId() {
      return userDoc().data.partnerId;
    }

    /* ============================
       ğŸ”¹ USERS COLLECTION
    ============================ */
    match /users/{uid} {
      // User can read own profile
      allow read: if isLoggedIn() && request.auth.uid == uid;

      // Only admin can manage users
      allow create, update, delete: if isAdmin();
    }

    /* ============================
       ğŸ”¹ PARTNERS COLLECTION
    ============================ */
    match /partners/{partnerIdDoc} {

      // âœ… ADMIN â†’ full access
      allow read, write: if isAdmin();

      // âœ… PARTNER â†’ read ONLY own partner doc
      allow read: if isPartner()
        && partnerId() == partnerIdDoc;

      // âŒ PARTNER can NEVER write
      allow write: if false;
    }

    /* ============================
       ğŸ”¹ WALLET LEDGER (ğŸ”¥ QUERY SAFE â€“ FINAL FIX)
    ============================ */
    match /wallet_ledger/{docId} {

      // âœ… ADMIN â†’ full access
      allow read, write: if isAdmin();

      // âœ… PARTNER â†’ read ONLY own ledger (QUERY SAFE)
      // Required for where() queries
      allow read: if isPartner()
        && request.query != null
        && request.query.where.partnerId == partnerId();

      // âŒ NO writes from app
      allow write: if false;
    }

    /* ============================
       ğŸ”¹ WITHDRAW REQUESTS
    ============================ */
    match /withdraw_requests/{docId} {

      // âœ… ADMIN â†’ full access
      allow read, update, delete: if isAdmin();

      // âœ… PARTNER â†’ create own withdraw request
      allow create: if isPartner()
        && request.resource.data.partnerId == partnerId();

      // âœ… PARTNER â†’ read ONLY own requests
      allow read: if isPartner()
        && resource.data.partnerId == partnerId();

      // âŒ PARTNER can NEVER update/delete
      allow update, delete: if false;
    }
  }
}
